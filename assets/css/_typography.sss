body
  font-family: ptsans-regular

header, footer, .tech-info
  font-family: ptsans-regular

h1, h2, h3, h4, h5, h6
  font-family: ptsans-regular
  text-transform: uppercase

h2
  font-size: 2.6rem
  line-height: 1.2

h3
  font-size: 1.8rem
  line-height: 1

h2::first-letter
  font-size: 2.8rem
 
p
  font-family: ptserif-regular

dt
  font-size: 1.6rem

dd
  font-size: 1.7rem
  -webkit-margin-start: 3rem
